{
  "name": "@pnpm-mono/database",
  "version": "1.0.0",
  "main": "./build/main.js",
  "types": "./build/main.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rimraf build && rimraf coverage",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "npm run test:ci",
    "test:ci": "jest --ci --collectCoverage --maxWorkers 2 --passWithNoTests"
  },
  "devDependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "jest": "29.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "tslib": "^2.5.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "rootDir": "./build",
    "displayName": "@pnpm-mono/database",
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "statements": 5,
        "branches": 5,
        "functions": 5,
        "lines": 5
      }
    }
  },
  "dependencies": {
    "@nestjs/typeorm": "^9.0.1",
    "@pnpm-mono/config": "workspace:*",
    "typeorm": "^0.3.12"
  }
}